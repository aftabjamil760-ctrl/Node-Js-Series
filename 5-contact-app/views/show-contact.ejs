<%- include('partials/header', { title: 'Contact Details' }) %>
				<!-- Left actions column -->
				<div class="col-lg-1 d-none d-lg-flex flex-column align-items-center">
					<div class="btn-group-vertical">
						<a href="/show-contact/:id/<%= contact && contact.id ? contact.id : '#' %>/edit" class="btn btn-info text-white mb-2">Edit</a>
						<form action="/delete-contact/<%= contact._id %>" method="get" onsubmit="return confirm('Delete this contact?');">
  <button type="submit" class="btn btn-outline-danger mb-2">Delete</button>
</form>

						<a href="/" class="btn btn-outline-secondary">Cancel</a>
					</div>
				</div>

				<!-- Main content -->
				<div class="col-lg-8">
					<div class="card shadow-sm">
						<div class="card-body">
							<div class="row">
								<div class="col-12">
									<h5 class="mb-4">Contact Details</h5>
								</div>
								<div class="col-12">
									<div class="row text-muted small">
										<div class="col-2 text-center">First Name</div>
										<div class="col-2 text-center">Last Name</div>
										<div class="col-2 text-center">Email</div>
										<div class="col-2 text-center">Phone</div>
										<div class="col-4 text-center">Address</div>
										<div class="col-4 text-center">Company</div>
									</div>
									<div class="row align-items-center py-4">
										<div class="col-2 text-center"><%= contact ? contact.firstName : 'N/A' %></div>
										<div class="col-2 text-center"><%= contact ? contact.lastName : 'N/A' %></div>
										<div class="col-2 text-center"><%= contact ? contact.email : 'N/A' %></div>
										<div class="col-2 text-center"><%= contact ? contact.phone : 'N/A' %></div>
										<div class="col-4 text-center"><%= contact ? contact.address : 'N/A' %></div>
										<div class="col-4 text-center"><%= contact ? contact.company : 'N/A' %></div>

									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Right vertical sidebar -->
				<div class="col-lg-3 d-none d-lg-flex align-items-stretch">
					<div class="card w-100 text-white" style="background:#324a63;">
						<div class="card-body d-flex flex-column justify-content-center align-items-center">
							<h6 class="mb-0 text-center" style="writing-mode:vertical-rl; transform:rotate(180deg);">Contact Details</h6>
						</div>
					</div>
				</div>
			</div>
		</div>

<%- include('partials/footer') %>
